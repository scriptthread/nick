    // Header
    header
      .container
        .row
          .col-lg-12
            img.img-responsive(src='img/nick2.gif', alt='', width='350')
            .intro-text
              span.name Nicholas Guerra
              hr.star-light
              span.skills Web Developer - Graphic Artist - User Experience Designer
    // Portfolio Grid Section
    section#portfolio
      .container
        .row
          .col-lg-12.text-center
            h2 Services
            hr.star-primary
        .row
          .col-sm-4.portfolio-item
            a.portfolio-link(href='#portfolioModal1', data-toggle='modal')
              .caption
                .caption-content
                  i.fa.fa-search-plus.fa-3x
              img.img-responsive(src='img/portfolio/light-bulb.png', alt='')
            h1.text-center Design
          .col-sm-4.portfolio-item
            a.portfolio-link(href='#portfolioModal2', data-toggle='modal')
              .caption
                .caption-content
                  i.fa.fa-search-plus.fa-3x
